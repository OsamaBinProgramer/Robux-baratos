    <script>
        // JavaScript para el popup que no se puede cerrar
        document.getElementById('btnOfertaEspecial').addEventListener('click', function() {
            document.getElementById('popupOferta').style.display = 'flex';

            // Deshabilitar el clic fuera del popup para cerrarlo
            document.addEventListener('click', function preventClose(e) {
                if (!document.querySelector('.popup-content').contains(e.target)) {
                    e.stopPropagation();
                    e.preventDefault();
                }
            }, true);

            // Deshabilitar la tecla ESC
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    e.preventDefault();
                    e.stopPropagation();
                }
            }, true);
        });
    </script>
